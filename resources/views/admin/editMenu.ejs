<div class="container mx-auto p-6">
<form action="/admin/menu/<%= menuItem._id %>/update" method="POST" enctype="multipart/form-data" class="space-y-6 bg-white p-6 rounded-lg shadow-md">
  <div>
      <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
      <input type="text" id="name" name="name" value="<%= menuItem.name %>" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" placeholder="Enter item name" required>
  </div>

  <div>
      <label for="image" class="block text-sm font-medium text-gray-700">Image</label>
      <div class="flex items-center space-x-4">
          <img src="<%= menuItem.image %>" alt="Menu Item Image" class="h-16 w-16 rounded-md border">
          <input type="file" id="image" name="image" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" accept="image/*">
      </div>
  </div>

  <div>
      <label for="price" class="block text-sm font-medium text-gray-700">Price</label>
      <input type="number" id="price" name="price" value="<%= menuItem.price %>" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" placeholder="Enter price" required>
  </div>

  <div>
      <label for="size" class="block text-sm font-medium text-gray-700">Size</label>
      <input type="text" id="size" name="size" value="<%= menuItem.size %>" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" placeholder="Enter size" required>
  </div>

  <button type="submit" class="w-full py-2 px-4 bg-green-500 text-white font-medium rounded hover:bg-green-700">
      Update Menu Item
  </button>
</form>
</div>